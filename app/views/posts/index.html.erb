<h1>小得得</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>標題</th>
      <th>內容</th>
      <th>使用者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user %></td>
        <td><%= link_to '內容', post , :class =>"btn btn-primary"%></td>
        <td><%= link_to '編輯', edit_post_path(post) , :class =>"btn btn-info"%></td>
        <td><%= link_to '刪除', post, method: :delete, data: { confirm: 'Are you sure?' } , :class =>"btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Post', new_post_path , :class =>"btn btn-success" %>
<a href="posts/new" class="btn btn-danger">留言</a>